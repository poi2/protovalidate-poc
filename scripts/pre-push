#!/bin/bash

# Pre-push hook to run CI checks locally before pushing
# Install: make install-hooks

set -e

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-push checks...${NC}"
echo ""

# Run all CI checks
make ci

echo ""
echo -e "${GREEN}âœ“ All pre-push checks passed!${NC}"
echo "Proceeding with push..."
